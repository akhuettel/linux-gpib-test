#set mode/ownership for gpib device files
KERNEL=="gpib[0-9]*", MODE="0660", GROUP="gpib"

#example specifying NI gpib-usb-hs+ with serial number 01ABC414 should be
#configured on /dev/gpib1
#SUBSYSTEM=="usb", ACTION=="add", ATTRS{idVendor}=="3923", ATTRS{idProduct}=="7618", ATTRS{serial}=="01ABC414", ENV{GPIB_CONFIG_OPTIONS}="--minor 1"

#example specifying a board with a specific device path should be
#configured on /dev/gpib2
#ACTION=="add", DEVPATH=="/devices/pci0000:00/0000:00:13.5/usb1/1-1/1-1:1.0", ENV{GPIB_CONFIG_OPTIONS}="--minor 2"
